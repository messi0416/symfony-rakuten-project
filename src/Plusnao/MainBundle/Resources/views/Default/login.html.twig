{% extends 'PlusnaoMainBundle::base.html.twig' %}

{% block body %}

<div class="container">

  <div class="clearfix" id="globalMessage">
    <div class="pull-left">
      <h2>株式会社フォレスト</h2>
    </div>
  </div>

  {% if error %}
  <div class="alert alert-danger">ログインできませんでした。</div>
  {% endif %}

  <div class="well">
    <div class="row">
      <div class="col-sm-3">&nbsp;</div>

        <div class="col-sm-6">
          <form role="form" action="{{ path('plusnao_login_check') }}" method="post">
            <div class="form-group">
              <label for="username">アカウント</label>
              <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
            </div>
            <div class="form-group">
              <label for="password">パスワード</label>
              <input type="password" class="form-control" id="password" name="_password" placeholder="パスワード">
            </div>

            <div class="form-group checkbox" style="padding-left: 20px;">
              <input type="checkbox" id="remember_me" name="_remember_me" value="1" checked="checked">
              <label for="remember_me" style="padding-left: 5px;">ログイン状態を維持する</label>
            </div>


            <div class="row">
              <div class="col-sm-12 text-center">
                <button type="submit" class="btn btn-default">ログイン</button>
              </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {% if isAgentLogin %}
              <input type="hidden" name="_target_path" value="plusnao_vendor_order_list">
            {% endif %}
          </form>
        </div>

      <div class="col-sm-3">&nbsp;</div>
    </div>
  </div>

</div>
{% endblock %}
