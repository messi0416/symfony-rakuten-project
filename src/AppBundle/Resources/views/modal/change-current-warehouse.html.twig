
{# 倉庫切り替え処理 #}
<div class="modal"
     id="modalChangeCurrentWarehouse"
     tabindex="-1"
     data-backdrop="static" data-keyboard="false"

     data-warehouse-list-url="{{ path('api_find_warehouse_list') }}"
     data-change-current-warehouse-url="{{ path('location_change_current_warehouse') }}"
     data-current-warehouse-id="{{ account is defined ? account.getWarehouseId() : '' }}"
  >

  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="modal-label">
          倉庫切り替え
        </h4>
      </div>

      <div class="modal-body">

        <div class="alert alert-info">
          倉庫を切り替えます。
          よろしいですか？
        </div>

        <div>
          <form role="form">
            <div class="form-group">
              <select class="form-control" v-model="warehouseChangeTo">
                <option v-for="warehouse in warehouses" v-text="warehouse.symbol + ' : ' + warehouse.name" v-bind:value="warehouse.id"></option>
              </select>
            </div>
          </form>
        </div>
      </div>

      <div class="modal-footer">
        <div class="row row10">
          <div class="col-xs-6">
            <button type="button" class="btn btn-lg btn-default fullWidth" data-dismiss="modal">閉じる</button>
          </div>
          <div class="col-xs-6">
            <button type="button" class="btn btn-lg fullWidth btn-success" v-on:click="changeWarehouseSubmit">切り替えを実行</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
