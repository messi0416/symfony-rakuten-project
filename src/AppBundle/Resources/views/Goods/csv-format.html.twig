{% extends 'AppBundle::base-admin.html.twig' %}

{% block stylesheets %}
  {{ parent() }}

  {% stylesheets
  'bundles/app/css/app.goods.css' filter='cssrewrite'
  %}
  <link href="{{ asset_url }}" rel="stylesheet" />
  {% endstylesheets %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}

{% block body %}

  <div id="goodsCsvFormat" class="container">

    <div id="header">
      <div class="clearfix">
        <div class="pull-left">
          <h2>CSVフォーマット</h2>
        </div>

      </div>
    </div>

    {% for type, flashMessages in app.session.flashbag.all() %}
      {% if type in ['info', 'success', 'notice', 'warning', 'danger'] %}
        <div>
          {% for flashMessage in flashMessages %}
            <div class="alert alert-{{ type }}">
              {{ flashMessage }}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    {% endfor %}

    <div id="csvFormatList">

      <!-- 楽天 dl-select.csv ⇒ NE -->
      <div class="panel panel-default">
        <div class="panel-heading">楽天dl-select.csv ⇒ NextEngine</div>
        <div class="panel-body">
          <form class="form-inline inlineBlock" role="form" action="{{ path('goods_csv_format_rakuten_dlselect_ne') }}" method="post" enctype="multipart/form-data">
            <div class="form-group mr5">
              <label for="uploadStockCsv" class="mr5 inputHeight">楽天 dl-select.csv</label>
              <input type="file" name="upload" id="rakutenDlselectCsv" style="display: inline-block">
            </div>

            <div class="form-group mr10">
              <button type="submit" class="btn btn-primary">アップロード</button>
            </div>
          </form>

        </div>

      </div>

    </div>
  </div>

{% endblock %}
